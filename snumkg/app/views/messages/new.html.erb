<%= form_for(@message) do |f| %>

  보낸이 : <%= current_user.username %>
  <br />
  받는이 : <%= f.text_field :receiver_id %> 

  <%= f.hidden_field :sender_id, value: current_user.id %>
  <%= f.label :title, '제목' %>
  <%= f.text_field :title %>

  <%= f.label :content, '내용' %>
  <%= f.text_area :content %>
