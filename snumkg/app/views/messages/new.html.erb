<%= form_for(@message) do |f| %>

  보낸이 : <%= current_user.nickname %>
  <br />
  받는이 : <%= @receiver.nickname %>
 
  <%= f.hidden_field :receiver_id, value: @receiver.id %> 
  <%= f.hidden_field :sender_id, value: current_user.id %>
  <%= f.label :title, '제목' %>
  <%= f.text_field :title %>

  <%= f.label :content, '내용' %>
  <%= f.text_area :content %>
  <br />
  <%= f.submit "쪽지 보내기", class:"btn" %>

<% end %>
