<% content_for(:head) do %>
  <%= javascript_include_tag :comments %>
  <%= stylesheet_link_tag    :comments %>
<% end %>


<table id="show_comments_box">
  <tr>
    <td class="bold">댓글</td>
  </tr>
  <% for comment in @comments %>
    <tr>
      <td>
        <span class="comment_writer">
          <%= comment.username %>
        </span>
        <span>
          <%= comment.content %>  
        </span>
        <span class="comment_like_number">
          좋아요<%= comment.likes.count %>
        </span>
        <% if signin? %>
          <span id="comment_like_box">
            <%= render :partial => "shared/like_btn", :locals => {:obj => comment, type: "comment"} %>
          </span>
        <% end %>
        <%= link_to "삭제", comment_path(comment), method: :delete %>
      </td>
    </tr>
  <% end %>
</table>

