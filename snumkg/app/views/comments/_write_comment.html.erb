<% if current_user %>
  <%= form_for(@comment, id: "write_comment_box") do |f| %>
    <%= current_user.nickname %>
    <%= f.text_field :content, class: "span5" %>
    <%= f.hidden_field :article_id, :value => @article.id %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :tab_name, :value => params[:tab_name] %>
    <%= f.hidden_field :board_name, :value => params[:board_name] %>
    <%= f.submit "댓글달기", class: "btn" %>
  <% end %>
<% end %>
