<% if current_user %>
  <%= form_for(@comment, id: "write_comment_box", remote: true) do |f| %>
    <%= current_user.nickname %>
    <%= f.text_field :content, class: "span5" %>
    <%= f.hidden_field :article_id, :value => @article.id %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :group_id, :value => params[:group_id] %>
    <%= f.hidden_field :board_id, :value => params[:board_id] %>
    <%= f.submit "댓글달기", class: "btn" %>
  <% end %>
<% end %>
