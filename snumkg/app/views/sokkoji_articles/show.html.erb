<table id="article_box">
  <tr>
    <td>
      <span id="article_title"><%= @sokkoji_article.title %></span>
      <span class="article_like_number">참석 <%= @sokkoji_article.attendances.count %></span>
      <span class="article_writer">작성자:<%= @sokkoji_article.user.nickname%> </span>
    </td>
  </tr>
  <tr>
    <td><div id="article_body"><%= @sokkoji_article.body %></div></td>
  </tr>
  <% if signin? %>
    <tr>
      <td>
        <% if @sokkoji_article.attendanced_by?(current_user) %>
          <%= link_to "참석 취소", destroy_attendance_path(@sokkoji_article), :class => "unlike_article_btn" %>
        <% else %>
          <%= link_to "참석하기", create_attendance_path(@sokkoji_article), :class => "like_article_btn" %>
        <% end %>
        <% if current_user == @sokkoji_article.user %>
          <span>
            <%= link_to "수정하기", edit_sokkoji_article_path(tab_name: params[:tab_name], id: @sokkoji_article) %>
          </span>
          <span>
            <%= link_to "삭제하기", sokkoji_article_path(tab_name: params[:tab_name], id: @sokkoji_article), method: "delete", confirm: "정말로 삭제하시겠습니까?" %>
          </span>
        <% end %>

      </td>
    </tr>

  <% end %>
  <tr>
    <td>
      <% for attendance in @sokkoji_article.attendances %>
        <%= attendance.user.nickname %> 
      <% end %>
      님이 참석합니다.
    </td>
  </tr>
  <tr>
    <td>
      <!--   render 'comments/show_comments', :locals => {:@comments => @comments}%>-->
    </td>
  </tr>
  <tr>
    <td>
      <!--  render 'comments/write_comment', :locals => {:@comment => @comment, :@article => @soarticle} %>-->
    </td>
  </tr>
</table>
