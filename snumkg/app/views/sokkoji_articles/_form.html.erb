<% content_for(:head) do %>
  <%= javascript_include_tag "fullcalendar" %>
  <%= stylesheet_link_tag    "fullcalendar" %>

  <%= stylesheet_link_tag "jquery-ui-1.8.21.custom" %>
  <%= javascript_include_tag "jquery-ui-1.8.21.custom.min" %>
  <%= javascript_include_tag "jquery-ui-timepicker-addon" %>
  <%= javascript_include_tag "datepicker" %>
<% end %>

<%= form_for(@sokkoji_article, url:sokkoji_articles_path(group_name: params[:group_name])) do |f| %>

  작성자 : <%= current_user.username %>
  <%= f.label :title, '제목' %>
  <%= f.text_field :title %>

  <%= f.label :date, "소꼬지날짜" %>
  <%= f.text_field :date, id: "sokkoji_date" %>

  <%= f.label :body, '내용' %>
  <%= f.text_area :body %>

  <br />
  <%= f.submit @sokkoji_article.new_record? ?  "글쓰기" : "수정", class:"btn" %>

<% end %>
