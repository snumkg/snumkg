<%= form_for [:admin, @group] do |f| %>
  <%= f.label :name, "그룹명" %>
  <%= f.text_field :name %>
	<%= f.label :group_type, "그룹타입" %>
	<%= f.text_field :group_type %>
	<%= f.label :is_hidden, "숨기기" %>
	<%= f.check_box :is_hidden %>
	<br>
  <%= f.submit @group.new_record? ? "만들기" : "수정"  %>
<% end %>
