<div class="navbar" id="top_navigation">
  <div class="navbar-inner">
    <div class="container">
      <ul class="nav">
        <li class="active">
        <%= link_to "MKG", root_path %>
        </li>
        <% for group in @groups %>
          <li><%= link_to group.name, group_path(group) %>
          </li>
        <% end %>
      </ul>
      <ul class="nav pull-right">
        <% if current_user %>
          <% if current_user.admin? %>
            <li>
            <%= link_to "관리자페이지", admin_path %>
            </li>
          <% end %>
          <li>
            <%= link_to "쪽지[#{current_user.message_count}]", messages_path(type: "receive") %>
          </li>
          <li>
          <%= link_to "알림[#{current_user.alarm_counts}]",user_alarms_path %>
          </li>
          <li>
          <%= link_to image_tag profile_image_path(current_user.id, :thumb => "thumb") %>
          </li>
          <li>
          <%= link_to current_user.nickname, profile_path(current_user) %>
          </li>
          <li><%= link_to "로그아웃", signout_path %></li>
        <% else %>
          <li>
          <ul>
            <%= link_to "로그인", "#", class: "login" %>
            <li class="login_box">
            <%= render 'shared/login_box' %>
            </li>
          </ul>
          </li>
          <li><%= link_to "회원가입", signup_path %></li>
        <% end %>
      </ul>

    </div>
  </div>
</div>


