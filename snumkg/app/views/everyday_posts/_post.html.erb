<div class="post">
  <div class="writer">
    <%= render :partial => 'shared/user_menu', :locals => {:writer => post.user, :size => "40x40"} %>
  </div>
  <div class="show_comment">
    <div class="post_content"><%= post.content %></div>
    <table class="table table-condensed" data-id="<%=post.id%>">
      <%= render :partial => 'everyday_comments/comments', :locals => {:post => post} %>
      <tr data-id="<%= post.id %>">
        <td>
          <%= image_tag picture_path(type: "profile", thumb: true, id: current_user.id), size: "20x20" %><%= current_user.nickname %>
        </td>
        <td>
          <%= render :partial => 'everyday_comments/new', :locals => {:post => post} %>
        </td>
      </tr>
    </table>
  </div>
</div>

