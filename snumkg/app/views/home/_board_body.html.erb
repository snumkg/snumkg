<div class="body">
  <table class="table table-condensed">
    <tbody>
      <% for article in @articles %>
        <tr>
          <td>
            <%= article.board.name %>
          </td>
          <td>
            <a href="<%= article_path(group_id: article.board.group.id, board_id: article.board.id, id: article.id) %>">
              <%= article.title %>[<%= article.comments.count%>]
            </a>
          </td>
          <td>
            <%= article.writer.nickname  unless article.writer.nil?%>
          </td>
          <td>
            <% if article.article_type == "소꼬지" %>
              참석<%= article.attendances.count %>
            <% else %>
              추천<%= article.likes.count %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

