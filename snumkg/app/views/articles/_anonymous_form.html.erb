<%= render 'new_js_css_tag' %>

<%= form_for(@article) do |f| %>

  <%= f.label :title, '제목' %>
  <%= f.text_field :title %>

  <%= f.label :anonymous_name, '작성자' %>
  <%= f.text_field :anonymous_name %>

  <%= label_tag :password, '비밀번호' %>
  <%= password_field_tag :password %>

  <%= hidden_field_tag :article_type, "익명" %>
  <%= f.label :body, '내용' %>
  <%= f.text_area :body, class: "redactor_content" %>
  <br />
  <%= f.submit @article.new_record? ? "글쓰기" : "수정", class:"btn" %>

<% end %>
