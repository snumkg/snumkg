<%= render 'new_js_css_tag' %>

<%= form_for(@article) do |f| %>

  작성자 : <%= current_user.username %>
  <%= f.label :title, '제목' %>
  <%= f.text_field :title %>

  <%= hidden_field_tag :article_type, 0 %>
  <%= f.label :body, '내용' %>
  <%= f.text_area :body, class: "redactor_content" %>
  <br />
  <%= f.submit @article.new_record? ? "글쓰기" : "수정", class:"btn" %>

<% end %>

