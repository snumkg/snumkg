<%= render 'new_js_css_tag' %>

<%= form_for(@article) do |f| %>

  작성자 : <%= current_user.username %>
  <%= f.label :title, '제목' %>
  <%= f.text_field :title %>
  <%= f.check_box :notice, {}, true, false %>공지
  <a id="vote_btn" href="#" class="btn">투표</a>
  <div class="vote_hidden_box hidden"></div>
  <div class="vote_box"></div>
  <%= hidden_field_tag :article_type, @board.board_type %>
  <%= f.label :body, '내용' %>
  <%= f.text_area :body, class: "redactor_content" %>
  <br />
  <%= f.submit @article.new_record? ? "글쓰기" : "수정", class:"btn", id: "article_submit" %>

<% end %>


<script>
  $("#vote_btn").click(function(){
    window.open("/votes/new","child","width=600, height=600"); 
  });
</script>
