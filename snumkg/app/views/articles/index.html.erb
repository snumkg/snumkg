<div id="article_wrapper">
  <table class="table">
    <thead>
      <th class="span1">번호</th>
      <th class="span5">제목</th>
      <th class="span2">작성일</th>
      <th class="span1">작성자</th>
    </thead>
    <tbody>
    <% for @article in @articles %>
      <tr>
        <td>
          <%= @index %> <% @index = @index - 1 %>
        </td>
        <td class="span7">
          <%= link_to @article.title, article_path(:tab_name => params[:tab_name], :board_name => params[:board_name], :id => @article) %>
          <span class="comment_number">
            [<%= @article.comments.count %>]
          </span>
          <span class="article_like_number">추천 <%= @article.likes.count %></span>

        </td>
        <td>
          <%= @article.created_at %>
        </td>
        <td>
          <%= @article.writer.nickname %>
        </td>
      </tr>
    <% end %>
  </tbody>
  </table>

  <% if current_user %>
    <%= link_to "글쓰기", new_article_path(:group_name => params[:group_name], :board_name => params[:board_name]) %>
  <% end %>
</div>
