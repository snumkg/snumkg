<div id="article_wrapper">
	<table id="article_list">
		<thead>
			<th class="number">번호</th>
			<th class="title">제목</th>
			<th class="date">작성일</th>
			<th class="writer">작성자</th>
		</thead>
		<tbody>
			<% for @notice in @notices %>
				<tr class="notice">
					<td class="number">
            <span class="label label-important">공지</span>
					</td>
					<td class="title">
						<%= link_to @notice.title, article_path(:group_id => params[:group_id], :board_id => params[:board_id], :id => @notice) %>
						<span class="comment_number">
							[<%= @notice.comments.count %>]
						</span>
						<span class="article_like_number">추천 <%= @notice.likes.count %></span>

					</td>
					<td class="date">
						<%= @notice.created_at.strftime("%Y/%m/%d") %>
					</td>
					<td class="writer">
            <%= render :partial => 'shared/user_menu', :locals => {:writer => @notice.writer, :size => "16x16"} %>
					</td>
				</tr>
      <% end %>

      <% for article in @articles %>
        <tr>
          <td class="number"><%= article.number %></td>
          <td class="title">
            <%= link_to article.title, article_path(:group_id => params[:group_id], :board_id => params[:board_id], :id => article) %>
            <span class="comment_number">[<%= article.comments.count %>]</span>
            <% if article.pictures.size > 0 %>
              <span><%= image_tag "icons/picture.gif" %></span>
            <% end %>
            <span class="article_like_number">추천 <%= article.likes.count %></span>
          </td>
          <td class="date"><%= article.created_at.strftime("%Y/%m/%d") %></td>
          <td class="writer"><%= render :partial => 'shared/user_menu', :locals => {:writer => article.writer, :size => "16x16"} %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% if current_user %>
    <%= link_to "글쓰기", new_article_path(:group_id => params[:group_id], :board_id => params[:board_id]), :class => "btn" %>
  <% end %>

  <%= paginate @articles %>
</div>

