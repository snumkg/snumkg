<% if flash.now[:error] %>
  <div class="modal hide" id="error_message">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">×</button>
      <h3>에러</h3>
    </div>
    <div class="modal-body">
      <%= flash.now[:error] %>
    </div>
    <div class="modal-footer">
      <a href="#" class="btn" data-dismiss="modal">닫기</a>
    </div>
  </div>

<% end %>
